<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.thdev.androidrecyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.SampleListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Basic example -->
        <activity
            android:name=".ui.basic.mvp.BasicMVPActivity"
            android:label="@string/label_activity_java_basic_mvp"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.design.local_image.LocalImageActivity"
            android:label="@string/label_activity_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.custom_scroll.basic.BasicCustomScrollActivity"
            android:label="@string/label_activity_custom_scroll_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.header_footer.basic.ImageHeaderFooterActivity"
            android:label="@string/label_activity_header_footer_sample"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.header_footer.custom.CustomScrollHeaderFooterActivity"
            android:label="@string/label_activity_custom_scroll_image_header_footer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.git_sample.GitHubUserSearchActivity"
            android:label="@string/label_activity_network_github_kotlin"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>