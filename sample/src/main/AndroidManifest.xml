<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.thdev.androidrecyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Basic example -->
<!--        완료-->
        <activity
            android:name="tech.thdev.androidrecyclerview.ui.basic.BasicRecyclerViewActivity"
            android:label="@string/label_basic_recycler_view"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <!-- 이거 살림 -->
        <activity
            android:name="tech.thdev.androidrecyclerview.ui.local_image.LocalImageActivity"
            android:label="@string/label_local_image_sample"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.header_footer.CustomScrollHeaderFooterActivity"
            android:label="@string/label_custom_scroll_image_header_footer"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.github.GitHubUserSearchActivity"
            android:label="@string/label_network_github_user_search"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>